<Window x:Class="My_app_company.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_app_company"
        mc:Ignorable="d"
        Title="Учёт предоставления юридических услуг" Height="715" Width="900" Icon="/Img/logo.jpg"> 
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#3f53b1" Grid.ColumnSpan="3" Margin="0,654,0,0" Grid.RowSpan="2">
            <Button x:Name="btnBack" Height="25" Width="150" Content=">>>" Margin="700 0 0 0"
                    Background="#3f53b1"
                    BorderBrush="#3f53b1"
                    Click="btnBack_Click"
                    />
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Image Source=".//Img/Logo.jpg"
                   Opacity=".1"
                   Width="490"/>
        </StackPanel>
        <Frame x:Name="frameMain" Grid.Row="1" NavigationUIVisibility="Hidden" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
